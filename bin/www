#!/usr/bin/env node

const app = require("../app");
const debug = require("debug")("your-app-name:server");
const http = require("http");
const socketIo = require("socket.io");

const port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

const server = http.createServer(app);

// Setup Socket.IO
const io = socketIo(server, {
  cors: {
    origin: "http://localhost:5173", // Địa chỉ frontend React
    methods: ["GET", "POST"],
  },
});

// Tạo 1 connect mới
// Socket.IO xử lý

// Lưu thông tin userId -> socketId

io.on("connection", (socket) => {
  console.log("A user connected:", socket.id);

  // Khi người dùng đăng nhập, tạo room cho họ theo user ID
  socket.on("register", (userID, idChatRoom) => {
    console.log(userID, idChatRoom);
    socket.join(idChatRoom);
    console.log(`User ${userID} joined room ${idChatRoom}`);
  });

  // Khi người dùng gửi tin nhắn, gửi đến phòng của người nhận
  socket.on("send_message", (data) => {
    const { senderID, chatRoomID, message } = data;

    // Gửi tin nhắn tới room của người nhận
    io.to(chatRoomID).emit("receive_message", {
      senderID,
      chatRoomID,
      message,
    });
    console.log(`Sent message from ${senderID} to ${chatRoomID}: ${message}`);
  });

  // Khi người dùng ngắt kết nối
  socket.on("disconnect", () => {
    console.log("User disconnected:", socket.id);
  });
});

server.listen(port, () => {
  console.log(`Server is running on port ${port}`);
});

function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return port;
  return false;
}
