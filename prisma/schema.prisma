generator client {
  provider = "prisma-client-js"
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  pic      String
  isAdmin  Boolean
}

model Chat {
  id   String @id @map("_id")
  chatName String
  isGroupChat Boolean 
  users String[]
  latestMessage String
  groupAdmin String
  createdAt String
  lastActivityTime String
  lastUserSender String
}

model Messagess {
  id   String @id @map("_id")
  content String
  readBy String[]
  timestamp String
  senderID String
  chatID String
}

model Notifycations {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  receiver String
  status String
  timestamp String
  senderID String
  chatID String
}


datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
